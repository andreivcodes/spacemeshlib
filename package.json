{
  "name": "@andreivcodes/spacemeshlib",
  "version": "1.0.15",
  "description": "Utility lib for Spacemesh network",
  "main": "src/index",
  "author": "andreivcodes",
  "license": "MIT",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest",
    "build": "yarn clean && tsc && yarn copy-files",
    "clean": "rm -rf ./lib",
    "copy-files": "cp ./src/wasm/ed25519.wasm ./lib/src/wasm/",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "proto:compile": "protoc --plugin=node_modules/ts-proto/protoc-gen-ts_proto --ts_proto_opt=esModuleInterop=true,forceLong=long,lowerCaseServiceMethods=true,outputServices=nice-grpc,outputServices=generic-definitions --ts_proto_out=./src/proto/dist  -I=./src/proto -I=./src/proto/third_party ./src/proto/spacemesh/v1/*.proto",
    "proto:watch": "chokidar \"**/*.proto\" -c \"yarn proto:compile\""
  },
  "dependencies": {
    "bip39": "^3.0.4",
    "js-xdr": "^1.3.0",
    "nice-grpc-common": "^2.0.0",
    "ts-proto": "^1.125.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.16",
    "assert": "^2.0.0",
    "chokidar-cli": "^3.0.0",
    "jest": "^29.0.2",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.8.3"
  }
}

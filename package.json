{
  "name": "@andreivcodes/spacemeshlib",
  "version": "1.0.0",
  "description": "Utility lib for Spacemesh network",
  "main": "src/index.js",
  "author": "andreivcodes",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "test": "mocha",
    "build": "protoc --plugin=node_modules/ts-proto/protoc-gen-ts_proto --ts_proto_opt=esModuleInterop=true,forceLong=long,lowerCaseServiceMethods=true,outputServices=nice-grpc,outputServices=generic-definitions --ts_proto_out=./dist  -I=./src/proto -I=./src/proto/third_party ./src/proto/spacemesh/v1/*.proto",
    "watch": "chokidar \"**/*.proto\" -c \"yarn build\""
  },
  "dependencies": {
    "bip39": "^3.0.4",
    "js-xdr": "^1.3.0",
    "ts-proto": "^1.125.0"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "mocha": "^10.0.0"
  }
}

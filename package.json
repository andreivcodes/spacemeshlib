{
  "name": "@andreivcodes/spacemeshlib",
  "version": "1.0.42",
  "description": "Utility lib for Spacemesh network",
  "author": "andreivcodes",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreivcodes/spacemeshlib.git"
  },
  "license": "MIT",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "prepublishOnly": "npm run build:node && npm run lint && npm run prettier",
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:wasm": "cd ./src/wasm/ed25519-WASM && GOOS=js GOARCH=wasm go build -o ./../ed25519.wasm",
    "build:node": "yarn clean && yarn gen-index && yarn prettier && yarn lint && yarn build && yarn copy-wasm && yarn docs",
    "build:protoc": "protoc --plugin=node_modules/ts-proto/protoc-gen-ts_proto --ts_proto_opt=esModuleInterop=true,outputServices=nice-grpc,outputServices=generic-definitions,useMapType=true,useReadonlyTypes=true,useExactTypes=false,forceLong=bigint --ts_proto_out=./src/proto/dist  -I=./src/proto/api -I=./src/proto/api/google ./src/proto/api/spacemesh/v1/*.proto",
    "build:all": "yarn clean && yarn gen-index && yarn build:protoc && yarn prettier && yarn lint && yarn build && yarn build:wasm && yarn copy-wasm && yarn docs",
    "clean": "rm -fr dist/* && yarn ctix remove",
    "gen-index": "yarn ctix create",
    "copy-wasm": "cp ./src/wasm/ed25519.wasm ./dist/esm/wasm/ && cp ./src/wasm/ed25519.wasm ./dist/cjs/wasm/",
    "proto:watch": "chokidar \"**/*.proto\" -c \"yarn proto:compile\"",
    "test": "yarn ctix remove && yarn gen-index && jest --config jestconfig.json",
    "lint": "eslint \"{src,tests}/**/*.{js,ts,jsx,tsx}\"",
    "prettier": "prettier --write \"{src,tests}/**/*.{js,ts,jsx,tsx}\"",
    "docs": "rm -rf docs && yarn typedoc"
  },
  "dependencies": {
    "bip39": "^3.0.4",
    "js-xdr": "^1.3.0",
    "nice-grpc": "^2.1.0",
    "nice-grpc-common": "^2.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "assert": "^2.0.0",
    "chokidar-cli": "^3.0.0",
    "ctix": "^1.8.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.4.1",
    "jest-junit": "^15.0.0",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-proto": "^1.138.0",
    "typedoc": "^0.23.24",
    "typescript": "^4.9.4"
  }
}

{
  "name": "@andreivcodes/spacemeshlib",
  "version": "1.0.29",
  "description": "Utility lib for Spacemesh network",
  "author": "andreivcodes",
  "license": "MIT",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "prepare": "npm run build:all",
    "prepublishOnly": "npm test && npm run prettier && npm run lint",
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:all": "yarn clean && yarn gen-index && yarn prettier && yarn build && yarn copy-files",
    "clean": "rm -fr dist/* && yarn ctix remove",
    "gen-index": "yarn ctix create",
    "copy-files": "cp ./src/wasm/ed25519.wasm ./dist/esm/wasm/ && cp ./src/wasm/ed25519.wasm ./dist/cjs/wasm/",
    "proto:compile": "protoc --plugin=node_modules/ts-proto/protoc-gen-ts_proto --ts_proto_opt=esModuleInterop=true,forceLong=string,lowerCaseServiceMethods=true,outputServices=nice-grpc,outputServices=generic-definitions --ts_proto_out=./src/proto/dist  -I=./src/proto -I=./src/proto/third_party ./src/proto/spacemesh/v1/*.proto",
    "proto:watch": "chokidar \"**/*.proto\" -c \"yarn proto:compile\"",
    "test": "yarn ctix remove && yarn gen-index && jest --config jestconfig.json",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "prettier": "prettier --write \"{src,tests}/**/*.{js,ts,jsx,tsx}\""
  },
  "dependencies": {
    "bip39": "^3.0.4",
    "js-xdr": "^1.3.0",
    "nice-grpc": "^2.0.0",
    "nice-grpc-common": "^2.0.0",
    "ts-proto": "^1.125.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.16",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "assert": "^2.0.0",
    "chokidar-cli": "^3.0.0",
    "ctix": "^1.4.0",
    "dotenv": "^16.0.2",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.2",
    "jest-junit": "^14.0.1",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.8.3"
  }
}
